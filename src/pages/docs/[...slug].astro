---
import { type CollectionEntry, getCollection, render } from "astro:content";

import DocsLayout from "@/layouts/DocsLayout.astro";
import TableOfContents from "@/components/TableOfContents.astro";
import SeoPage from "@/components/SeoPage.astro";

interface Props {
  entry: CollectionEntry<"docs">;
}

export async function getStaticPaths() {
  const docs = await getCollection("docs");
  return docs.map((entry) => ({
    params: { slug: entry.id.replace(/\/index$/, "") },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<DocsLayout title={entry.data.title} description={entry.data.description}>
  <SeoPage slot="head" />
  
  <article class="docs-article">
    {
      entry.data.image && (
        <img
          src={entry.data.image.src}
          alt={entry.data.imageAlt || ""}
          class="mb-8 h-auto w-full rounded-lg"
        />
      )
    }
    <div class="prose mx-auto max-w-none lg:mx-0" id="docs-content">
      <Content />
    </div>
  </article>

  <TableOfContents slot="toc" content={entry.body || ""} />
</DocsLayout>

<style>
  .docs-article {
    width: 100%;
  }
</style>
